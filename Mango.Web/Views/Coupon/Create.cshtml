@model CouponDTO

<form asp-action="Create">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Create Coupon</h1>

        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="@Model.CouponCode"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="@Model.CouponCode"/>
                <span asp-validation-for="@Model.CouponCode" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="@Model.DiscountAmount"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="@Model.DiscountAmount" />
                <span asp-validation-for="@Model.DiscountAmount" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="@Model.MinimalAmount"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="@Model.MinimalAmount" />
                <span asp-validation-for="@Model.MinimalAmount" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a class="btn-primary btn form-control" asp-action="Index">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>

        </div>

        <div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}