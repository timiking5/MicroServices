@model CouponDTO

<form asp-action="Delete">
    <input asp-for="Id" hidden/>
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Delete Coupon</h1>

        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="@Model.CouponCode"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled class="form-control" asp-for="@Model.CouponCode" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="@Model.DiscountAmount"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled class="form-control" asp-for="@Model.DiscountAmount" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="@Model.MinimalAmount"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled class="form-control" asp-for="@Model.MinimalAmount" />
            </div>

            <div class="col-5 offset-2">
                <a class="btn-primary btn form-control" asp-action="Index">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>

        </div>

        <div>
        </div>
    </div>
</form>