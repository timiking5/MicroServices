@model ProductDTO

<form asp-action="Delete">
    <br />
    <div class="container border p-3">
        <input asp-for="Id" hidden />
        <h1 class="text-white text-center">Create Product</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;"></label>

            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="Name" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="CategoryName" class="control-label pt-2" style="font-size:20px;"></label>

            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="CategoryName" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea disabled asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="col-2">
                <label asp-for="ImageUrl" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="ImageUrl" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="Price" class="form-control" />
            </div>
            <div class="col-5 offset-2">
                <a class="btn-primary btn form-control" asp-action="Index">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>